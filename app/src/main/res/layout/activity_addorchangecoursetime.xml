<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/AddCourseTime_T_CourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/AddCourseMessage"
        android:layout_gravity="top|center"
        android:gravity="top|center"
        android:background="@color/colorBlueDemo1"
        android:text="课程名"/>
    <LinearLayout
        android:id="@+id/SeeCourse_Part2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SeeCourse_Part1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/AddCourseChoose"
            android:textSize="@dimen/AddCourseMessage"
            android:text="第"/>
        <TextView
            android:id="@+id/AddCourseTime_T_termNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/AddCourseChoose"
            android:textSize="@dimen/AddCourseMessage"
            android:text="学期"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/AddCourseMessage"
            android:text="老师名字："/>
        <TextView
            android:id="@+id/AddCourseTime_T_courseT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/AddCourseMessage"
            android:autoLink="all"
            android:text="老师名字"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/AddcourseTime_MWidth"
            android:layout_height="wrap_content"
            android:textSize="@dimen/AddCourseMessage"
            android:text="开始周数："/>

        <EditText
            android:id="@+id/AddCourseTime_E_StartWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="这门课将在哪周开始？"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/AddcourseTime_MWidth"
            android:layout_height="wrap_content"
            android:textSize="@dimen/AddCourseMessage"
            android:text="结束周数："/>
        <EditText
            android:id="@+id/AddCourseTime_E_EndWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="这门课将在哪周结束？"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/AddcourseTime_MWidth"
            android:layout_height="wrap_content"
            android:textSize="@dimen/AddCourseMessage"
            android:text="星期："/>
        <EditText
            android:id="@+id/AddCourseTime_E_weekNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="这门课将在星期几开展？"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/AddcourseTime_MWidth"
            android:layout_height="wrap_content"
            android:textSize="@dimen/AddCourseMessage"
            android:text="课程时间："/>
        <EditText
            android:id="@+id/AddCourseTime_E_courseNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="这门课将这天的第几节课上？"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/AddCourseTime_Check_isClearNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/AddCourseMessage"
            android:text="若原有课程笔记是否清除" />
    </LinearLayout>

    <Button
        android:id="@+id/AddCourseTime_B_saveChange"
        android:layout_marginTop="@dimen/AddCourseChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存更改"/>

</LinearLayout>