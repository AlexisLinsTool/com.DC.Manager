<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/courseInfo_T_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_gravity="top"
        android:text="课程小记"/>
    <TextView
        android:id="@+id/courseInfo_M_courseName"
        android:layout_alignParentStart="true"
        android:layout_below="@id/courseInfo_T_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/AddCourseChoose"
        android:textSize="@dimen/AddCourseMessage"
        android:gravity="start|bottom"
        android:text="课程名字："/>
    <TextView
        android:id="@+id/courseInfo_T_courseName"
        android:layout_toEndOf="@id/courseInfo_M_courseName"
        android:layout_below="@id/courseInfo_T_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/AddCourseChoose"
        android:textSize="@dimen/AddCourseMessage"
        android:gravity="start|bottom"
        android:text="课程名字"/>
    <TextView
        android:id="@+id/courseInfo_H_help1"
        android:layout_width="1dp"
        android:layout_below="@id/courseInfo_T_title"
        android:layout_height="@dimen/AddCourseChoose"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/courseInfo_T_week"
        android:layout_toEndOf="@id/courseInfo_H_help1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/AddCourseChoose"
        android:layout_below="@id/courseInfo_T_title"
        android:textSize="@dimen/AddCourseMessage"
        android:gravity="start|bottom"
        android:text="10"/>
    <TextView
        android:id="@+id/courseInfo_M_week"
        android:layout_toEndOf="@id/courseInfo_T_week"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/AddCourseChoose"
        android:layout_below="@id/courseInfo_T_title"
        android:textSize="@dimen/AddCourseMessage"
        android:gravity="start|bottom"
        android:text="周"/>
    <TextView
        android:id="@+id/courseInfo_M_weekNum"
        android:layout_toEndOf="@id/courseInfo_M_week"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_height="@dimen/AddCourseChoose"
        android:layout_below="@id/courseInfo_T_title"
        android:textSize="@dimen/AddCourseMessage"
        android:gravity="start|bottom"
        android:text="周"/>
    <TextView
        android:id="@+id/courseInfo_T_weekNum"
        android:layout_toEndOf="@id/courseInfo_M_weekNum"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/AddCourseChoose"
        android:layout_below="@id/courseInfo_T_title"
        android:textSize="@dimen/AddCourseMessage"
        android:gravity="start|bottom"
        android:text="4"/>
    <TextView
        android:id="@+id/courseInfo_M_courseNum1"
        android:layout_toEndOf="@id/courseInfo_M_weekNum"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_height="@dimen/AddCourseChoose"
        android:layout_below="@id/courseInfo_T_title"
        android:textSize="@dimen/AddCourseMessage"
        android:gravity="start|bottom"
        android:text="第"/>
    <TextView
        android:id="@+id/courseInfo_T_courseNum"
        android:layout_toEndOf="@id/courseInfo_M_courseNum1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/AddCourseChoose"
        android:layout_below="@id/courseInfo_T_title"
        android:textSize="@dimen/AddCourseMessage"
        android:gravity="start|bottom"
        android:text="4"/>
    <TextView
        android:id="@+id/courseInfo_M_courseNum2"
        android:layout_toEndOf="@id/courseInfo_T_courseNum"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/AddCourseChoose"
        android:layout_below="@id/courseInfo_T_title"
        android:textSize="@dimen/AddCourseMessage"
        android:gravity="start|bottom"
        android:text="节"/>
    <TextView
        android:id="@+id/courseInfo_H_help2"
        android:layout_width="match_parent"
        android:layout_below="@id/courseInfo_T_week"
        android:layout_height="20dp"
        android:gravity="center"
        android:background="@color/colorRedDemo1"
        android:text="笔记"/>
    <EditText
        android:id="@+id/courseInfo_T_note"
        android:layout_below="@id/courseInfo_H_help2"
        android:layout_above="@id/courseInfo_Tail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:singleLine="false"
        android:hint="请开始你的表演"
        />

    <LinearLayout
        android:id="@+id/courseInfo_Tail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/courseInfo_B_saveChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改笔记"/>
    </LinearLayout>

</RelativeLayout>